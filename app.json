{
  "expo": {
    "name": "MungMung",
    "slug": "mungmung",
    "version": "1.0.0",
    "sdkVersion": "51.0.0",
    "platforms": ["ios", "android"],
    "permissions": [
      "microphone"
    ],
    "plugins": [
      [
        "expo-speech-recognition",
        {
          "speechRecognitionPermission": {
            "ios": {
              "message": "This app uses speech recognition to understand what you say."
            },
            "android": {
              "message": "This app requires permission to access the microphone for speech recognition."
            }
          }
        }
      ]
    ],
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.yourcompany.mungmung"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
